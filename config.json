{
    "global": {
        "device": "gpu",
        "train" : true,
        "val" :  true,
        "test" : false,
        "n_gpu": 1

    },
    "arch": {
        "type": "PPLiteSeg",
        "pretrained": null,
        "args": {
            "num_classes" : 3
        }
    },

    "train_loader": {
        "dataset" :
        {
            "type": "Mapillary",
            "args": {
                "root": "E:\\Dataset\\Mapillary\\",
                "split": "training",
                "transforms": {
                    "RandomScaleCrop": {
                        "scale": [0.125, 2.0],
                        "size": [480, 640]
                    },
                    "Rotate": false,
                    "HorizontalFlip": true,
                    "ColorJitter": {
                        "brightness" : 0.5,
                        "contrast" : 0.5,
                        "saturation" : 0.5
                    },
                    "Normalize":
                    {
                        "mean": [0.485, 0.456, 0.406],
                        "std": [0.229, 0.224, 0.225]
                    }
                }
            }
        },
        "args": {
            "batch_size": 16,
            "num_workers": 8
        }
    },
    "val_loader": {
        "dataset" :
        {
            "type": "Mapillary",
            "args": {
                "root": "E:\\Dataset\\\\Mapillary\\",
                "split": "validation",
                "transforms": {
                    "Resize": [480, 640],
                    "Normalize":
                    {
                        "mean": [0.485, 0.456, 0.406],
                        "std": [0.229, 0.224, 0.225]
                    }
                }
            }
        },
        "args": {
            "batch_size": 16,
            "num_workers": 8
        }
    },

    "optimizer": {
        "type": "SGD",
        "differential_lr": true,
        "args":{
            "lr": 0.05,
            "weight_decay": 5e-4
        }
    },

    "loss" : [
        {
            "type": "OhemCELoss",
            "coef" : 1,
            "args": {
                "thresh": 0.7,
                "n_min": 19200,
                "ignore_lb": 255
            }
        },
        {
            "type": "OhemCELoss",
            "coef" : 1,
            "args": {
                "thresh": 0.7,
                "n_min": 19200,
                "ignore_lb": 255
            }
        },
        {
            "type": "OhemCELoss",
            "coef" : 1,
            "args": {
                "thresh": 0.7,
                "n_min": 19200,
                "ignore_lb": 255
            }
        }
    ],


    "lr_scheduler": {
        "type": "PolynomialLR",
        "args": {
            "total_iters": 100000,
            "power" : 0.9
        }
    },

    "trainer": {
        "iterations": 100000,
        "save_dir": ".//saved//",
        "save_period": 10,
        "monitor": "max Mean_IoU",
        "early_stop": 10,
        "tensorboard": true,
        "log_dir": "saved\\runs",
        "log_per_iter": 20,
        "val": true,
        "val_per_epochs": 5,
        "checkpoint" : null
    },


    "test": {
        "data": "",
        "depth": null,
        "path" : "",
        "save" : ""
    }
}