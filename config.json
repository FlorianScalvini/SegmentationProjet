{
    "global": {
        "device": "gpu",
        "train" : true,
        "val" :  true,
        "test" : false,
        "n_gpu": 1
    },
    "arch": {
        "type": "CustomModel",
        "pretrained": null,
        "args": {
            "num_classes" : 19
        }
    },

    "train_loader": {
        "dataset" :
        {
            "type": "Cityscapes",
            "split": "train",
            "args": {
                "root": "E:\\Dataset\\leftImg8bit_trainvaltest",
                "split": "train",
                "depth": true,
                "transforms": {
                    "RandomScale": {
                        "min": 0.5,
                        "max": 2
                    },
                    "RandomCrop": [1024,512],
                    "ColorJitter": {
                        "brightness" : 0.5,
                        "contrast" : 0.5,
                        "saturation" : 0.5
                    },
                    "Rotate": null,
                    "HorizontalFlip": true,
                    "Blur": null,
                    "Normalize":
                    {
                        "mean": [0.3257, 0.3690, 0.3223],
                        "std": [0.2112, 0.2148, 0.2115]
                    }
                }
            }
        },
        "args": {
            "batch_size": 4,
            "num_workers": 14
        }
    },
    "val_loader": {
        "dataset" :
        {
            "type": "Cityscapes",
            "args": {
                "root": "E:\\Dataset\\leftImg8bit_trainvaltest",
                "split": "val",
                "depth": true,
                "transforms": {
                    "commun": {
                        "Resize": [512, 1024]
                    },
                    "depth":
                    {
                        "Blur": true
                    },
                    "color": {
                        "Normalize":
                        {
                            "mean": [0.5, 0.3690, 0.3223],
                            "std": [0.5, 0.5, 0.2115]
                        }
                    }
                }
            }
        },
        "args": {
            "batch_size": 7,
            "num_workers": 14
        }
    },

    "optimizer": {
        "type": "SGD",
        "differential_lr": true,
        "args":{
            "lr": 0.05,
            "weight_decay": 5e-4
        }
    },

    "loss" : {
        "type": "CrossEntropyLoss2d",
        "coef" : [1,0.2,0.2,0.2,0.2],
        "args": {
            "ignore_index": 255
        }
    },

    "lr_scheduler": {
        "type": "ReduceLROnPlateau",
        "args": {
            "factor": 0.9,
            "patience" : 3
        }
    },

    "trainer": {
        "epochs": 10000,
        "save_dir": ".//saved//",
        "save_period": 10,
        "monitor": "max Mean_IoU",
        "early_stop": 10,
        "tensorboard": true,
        "log_dir": "saved\\runs",
        "log_per_iter": 20,
        "val": true,
        "val_per_epochs": 5
    }
}