{
    "global": {
        "device": "gpu",
        "train" : true,
        "val" :  true,
        "test" : false,
        "n_gpu": 1
    },
    "arch": {
        "type": "CustomModel",
        "pretrained": null,
        "args": {
            "num_classes" : 19
        },
        "backbone":
        {
            "type": null,
            "args":
            {

            }
        }
    },

    "train_loader": {
        "dataset" :
        {
            "type": "Cityscapes",
            "split": "train",
            "args": {
                "root": "/media/ubuntu/DATA/Database/leftImg8bit_trainvaltest",
                "split": "val",
                "transforms": {
                    "RandomScale": {
                        "min": 0.5,
                        "max": 2
                    },
                    "RandomCrop": [1024,512],
                    "ColorJitter": {
                        "brightness" : 0.5,
                        "contrast" : 0.5,
                        "saturation" : 0.5
                    },
                    "Rotate": null,
                    "HorizontalFlip": true,
                    "Blur": null,
                    "Normalize":
                    {
                        "mean": [0.3257, 0.3690, 0.3223],
                        "std": [0.2112, 0.2148, 0.2115]
                    }
                }
            }
        },
        "args": {
            "batch_size": 4,
            "num_workers": 12
        }
    },
    "val_loader": {
        "dataset" :
        {
            "type": "Cityscapes",
            "args": {
                "root": "/media/ubuntu/DATA/Database/leftImg8bit_trainvaltest/",
                "split": "val",
                "transforms": {
                    "Resize": [2048,1024],
                    "RandomCrop": [1024,512],
                    "Rotate": null,
                    "HorizontalFlip": null,
                    "Blur": null,
                    "Normalize":
                    {
                        "mean": [0.485, 0.456, 0.406],
                        "std": [0.229, 0.224, 0.225]
                    }
                }
            }
        },
        "args": {
            "batch_size": 7,
            "num_workers": 14
        }
    },

    "optimizer": {
        "type": "SGD",
        "differential_lr": true,
        "args":{
            "lr": 0.01,
            "weight_decay": 5e-4
        }
    },

    "loss" : {
        "type": "CrossEntropyLoss2d",
        "coef" : [1,0.2,0.2],
        "args": {
            "ignore_index": 255
        }
    },

    "lr_scheduler": {
        "type": "ReduceLROnPlateau",
        "args": {}
    },

    "trainer": {
        "epochs": 80,
        "save_dir": ".//saved//",
        "save_period": 10,
        "monitor": "max Mean_IoU",
        "early_stop": 10,
        "tensorboard": true,
        "log_dir": "saved\\runs",
        "log_per_iter": 20,
        "val": true,
        "val_per_epochs": 5
    }
}