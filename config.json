{
    "global": {
        "device": "gpu",
        "train" : true,
        "val" :  true,
        "test" : false,
        "n_gpu": 1

    },
    "arch": {
        "type": "CustomModel",
        "pretrained": null,
        "args": {
            "num_classes" : 19
        }
    },

    "train_loader": {
        "dataset" :
        {
            "type": "Cityscapes",
            "args": {
                "root": "/media/ubuntu/DATA/Database/leftImg8bit_trainvaltest/",
                "split": "train",
                "transforms": {
                    "RandomScaleCrop": {
                        "scale": [0.5, 2],
                        "size": [512, 1024]
                    },
                    "Rotate": false,
                    "HorizontalFlip": true,
                    "ColorJitter": {
                        "brightness" : 0.5,
                        "contrast" : 0.5,
                        "saturation" : 0.5
                    },
                    "Normalize":
                    {
                        "mean": [0.5, 0.5, 0.5],
                        "std": [0.5, 0.5, 0.5]
                    }
                }
            }
        },
        "args": {
            "batch_size": 4,
            "num_workers": 8
        }
    },
    "val_loader": {
        "dataset" :
        {
            "type": "Cityscapes",
            "args": {
                "root": "/media/ubuntu/DATA/Database/leftImg8bit_trainvaltest/",
                "split": "val",
                "transforms": {
                    "Resize": [512, 1024],
                    "Normalize":
                    {
                        "mean": [0.5, 0.5, 0.5],
                        "std": [0.5, 0.5, 0.5]
                    }
                }
            }
        },
        "args": {
            "batch_size": 4,
            "num_workers": 8
        }
    },

    "optimizer": {
        "type": "SGD",
        "differential_lr": true,
        "args":{
            "lr": 0.05,
            "weight_decay": 5e-4
        }
    },

    "loss" : {
        "type": "CrossEntropyLoss2d",
        "coef" : [1, 1],
        "args": {
            "ignore_index": 255
        }
    },

    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "gamma": 0.1,
            "step_size" : 2
        }
    },

    "trainer": {
        "epochs": 10000,
        "save_dir": ".//saved//",
        "save_period": 10,
        "monitor": "max Mean_IoU",
        "early_stop": 10,
        "tensorboard": true,
        "log_dir": "saved\\runs",
        "log_per_iter": 20,
        "val": true,
        "val_per_epochs": 5,
        "checkpoint" : null
    },


    "test": {
        "data": "",
        "depth": null,
        "path" : "",
        "save" : ""
    }
}